<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="falcon"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>com.kedialabs.domain.Contractor</class>
		<class>com.kedialabs.domain.Project</class>
		<class>com.kedialabs.domain.User</class>
		<class>com.kedialabs.domain.UserSession</class>
		<class>com.kedialabs.domain.Vendor</class>
		<class>com.kedialabs.batchingplant.domain.VehicleInventory</class>
		<class>com.kedialabs.batchingplant.domain.MaterialInventoryVoucher</class>
		<class>com.kedialabs.batchingplant.domain.ConcreteDispatchVoucher</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
	</persistence-unit>
</persistence> 